@model AnnouncementsWeb.Views.IndexModel

@{

    ViewBag.Title = "Home Page";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CAnnouncement[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CAnnouncement[0].DateTimeCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CAnnouncement[0].NameOfAnn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CAnnouncement[0].Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CAnnouncement)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeCreation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfAnn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.AnnId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.AnnId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.AnnId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



